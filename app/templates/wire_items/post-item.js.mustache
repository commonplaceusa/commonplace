<div class="wire-top" data-published-at="{{publishedAtISO}}">
  <!--<a href="#"><div class="icon-container {{wireCategoryClass}}"></div><h3>{{wireCategoryName}}</h3></a>-->
  <p>{{#canEdit}} - <a href="#" class="editlink">EDIT</a>{{/canEdit}}</p>
  <p><a href="{{share_url}}">{{publishedAt}}</a></p>
</div>
<div class="post-content">
   <img class="avatar-container" src="{{avatarUrl}}" />
  <h3><a class="title" href="{{share_url}}">{{title}}</a></h3>
  <p class="author"><a href="{{author_url}}">{{author}}</a> posted in <span class="bold">{{wireCategoryName}}</span></p>
  {{#markdown}}
   {{body}}
  {{/markdown}}
</div>
<div class="post-action clear">
  <ul class="actions">
    <li class="reply-link">
      <i class="icon"></i>
      <span>Reply</span>
    </li>
    <li class="message-link">
      <i class="icon"></i>
      <span>Message {{first_name}}</span>
    </li>
    <li class="share-link">
      <i class="icon"></i>
      <span>Share</span>
    </li>
    <li class="thank-link">
      <i class="icon"></i>
      <span>Thank</span>
    </li>
    <li class="flag-link">
      <i class="icon"></i>
      <span>Flag</span>
    </li>
   </ul>
</div>
<div class="post-interaction">
  <div class="interaction">
    {{#numThank}}
    <p class="thanked">
    <span class="blue">{{numThank}} {{peoplePerson}}</span> thanked this post:
    {{#thanks}}
    <span class="blue">{{thanker}} </span>
    {{/thanks}}
    </p>
    {{/numThank}}
    {{#num_shares}}
    <!--
    <p class="publicized">
    <span class="blue">{{num_shares}} {{share_people}}</span> shared this post:
    {{#shares}}
    <span class="blue">{{sharer}}</span>
    {{/shares}}
    </p>
    -->
    {{/num_shares}}
  </div>
</div>

<div class="replies-area"></div>

<div class="clear">
</div>
