<div class="wire-top" data-published-at="{{eventDateISO}}">
</div>
<div class="post-content">
  <div class="calendar avatar">
    <div class="month">{{short_month_name}}</div>
    <div class="day-of-month">{{day_of_month}}</div>
  </div>

  <h3><a class="title" href="{{share_url}}">{{title}}</a></h3>
  {{#markdown}}
  {{body}}
  <!--{{#start_time}}
    <div class="event-time">
      {{start_time}}
    </div>
    {{/start_time}}
    {{#end_time}}
    <div class="event-time">
      &#8211; {{end_time}}
    </div>
    {{/end_time}}-->
  <p class="address"><span class="bold">Event Date:</span> {{short_month_name}} {{day_of_month}} <span class="event-timestamp">({{eventDate}})</span></p>
  <p class="address"><span class="bold">Event Time:</span> {{start_time}} &#8211; {{end_time}}</span></p>
  {{#venue}}<p class="venue"><span class="bold">Venue:</span> {{venue}}</p>{{/venue}}
  {{#address}}<p class="address"><span class="bold">Address:</span> {{address}}</p>{{/address}}
  {{/markdown}}
  <p class="post-info"><a class="author" {{#isFeed}} href="{{feedUrl}}" {{/isFeed}}{{^isFeed}} href="{{author_url}}" {{/isFeed}}>{{author}}</a> posted in <a class="wire_filter" href="{{wireCategoryUrl}}">{{wireCategoryName}}</a></p>
</div>
<div class="post-action clear">
  <ul class="actions">
    <li class="reply-link current">
      <i class="icon"></i>
      <span>Reply</span>
    </li>
    <li class="message-link">
      <i class="icon"></i>
      <span>Message {{first_name}}</span>
    </li>
    <li class="share-link">
      <i class="icon"></i>
      <span>Share</span>
    </li>
    <li class="thank-link">
      <i class="icon"></i>
      <span>Thank</span>
    </li>
    <li class="flag-link">
      <i class="icon"></i>
      <span>Flag</span>
    </li>
    {{#canEdit}}
    <li class="edit-link">
      <i class="icon"></i>
      <span class="editlink"><a href="#">Edit Post</a></span>
    </li>
    {{/canEdit}}
   </ul>
</div>
<div class="post-interaction">
  <div class="interaction">
    {{#numThank}}
    <p class="thanked">
    <span class="blue">{{numThank}} {{peoplePerson}}</span> thanked this post:
    {{#thanks}}
    <span class="blue">{{thanker}} </span>
    {{/thanks}}
    </p>
    {{/numThank}}
    {{#num_shares}}
    <!--
    <p class="publicized">
    <span class="blue">{{num_shares}} {{share_people}}</span> shared this post:
    {{#shares}}
    <span class="blue">{{sharer}}</span>
    {{/shares}}
    </p>
    -->
    {{/num_shares}}
  </div>
</div>

<div class="replies-area"></div>

<div class="clear">
</div>
