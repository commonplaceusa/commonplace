#header
  - if logged_in?
    #nav_wrapper
      %ul{:class=>"nav"}
        %li{:class=>"my-activity selected-nav"} 
          %div.week-cpcredits{:class=>"number"}= current_user.weekly_cpcredits
          %a(title=@link){:href => @link} My Activity
          %ul{:class=>"my-activity-sub"}
            %p 
              This is a record of all the ways you've helped your neighbors on CommonPlace.  You've earned
              %span.week-cpcredits{:class=>"red"}= current_user.weekly_cpcredits
              'Good Neighbor' points this week, and
              %span.all-cpcredits{:class=>"red"}= current_user.all_cpcredits
              since you signed up 
              %span{:class=>"red"}= current_user.created_at.strftime '%B %Y'
            .sub-left
              %h4 Personal Activity
              %span.this-week This Week
              %span.all-time All Time
              %li 
                %span{:class=>"sub-title"}My posts
                %span{:class=>"sub-notif one"}= current_user.posts.count
                %span{:class=>"sub-notif two"}= current_user.posts.this_week.count
              %li 
                %span{:class=>"sub-title"}My replies
                %span{:class=>"sub-notif one"}= current_user.replies.count
                %span{:class=>"sub-notif two"}= current_user.replies.this_week.count
              -#%li 
                -%span{:class=>"sub-title"}Neighbors thanked
                -%span{:class=>"sub-notif one"} -1
                -%span{:class=>"sub-notif two"} -2
              %li 
                %span{:class=>"sub-title"}Replies received
                %span{:class=>"sub-notif one"}= current_user.replies_received.count
                %span{:class=>"sub-notif two"}= current_user.replies_received_this_week.count
              -#%li 
                -#%span{:class=>"sub-title"}Thanks received
                -#%span{:class=>"sub-notif one"} -1
                -#%span{:class=>"sub-notif two"} -2
              %li 
                %span{:class=>"sub-title"}Events posted 
                %span{:class=>"sub-notif one"}= current_user.events.count
                %span{:class=>"sub-notif two"}= current_user.events.this_week.count
              -#%li 
                -#%span{:class=>"sub-title"}Number of site visits 
                -#%span{:class=>"sub-notif one"} -1
                -#%span{:class=>"sub-notif two"} -2
              %li 
                %span{:class=>"sub-title"}Invites sent 
                %span{:class=>"sub-notif one"}= current_user.all_invitations.count
                %span{:class=>"sub-notif two"}= current_user.invitations_this_week.count
              -#%li 
                -#%span{:class=>"sub-title"}Shares on Facebook 
                -#%span{:class=>"sub-notif one"} -1
                -#%span{:class=>"sub-notif two"} -2
              %li.total
                %span.sub-total-title Total
                %span.sub-total-all.all-cpcredits= current_user.all_cpcredits
                %span.sub-total-week.week-cpcredits= current_user.weekly_cpcredits
            .sub-right 
              %h4 Town Activity
              %span.this-week This Week
              %span.all-time All Time
              %li
                %span{:class=>"sub-title"}Neighbors registered
                %span{:class=>"sub-notif one"}= current_community.users.count
                %span{:class=>"sub-notif two"}= current_community.users.this_week.count
              %li 
                %span{:class=>"sub-title"}Total posts
                %span{:class=>"sub-notif one"}= current_community.posts.count
                %span{:class=>"sub-notif two"}= current_community.posts.this_week.count
              %li 
                %span{:class=>"sub-title"}Total events
                %span{:class=>"sub-notif one"}= current_community.events.count
                %span{:class=>"sub-notif two"}= current_community.events.this_week.count
              %li 
                %span{:class=>"sub-title"}Total replies  
                %span{:class=>"sub-notif one"}= current_community.replies.count
                %span{:class=>"sub-notif two"}= current_community.replies_this_week.count
              -#%li 
                -%span{:class=>"sub-title"}Total thanks
                -%span{:class=>"sub-notif one"} -1
                -%span{:class=>"sub-notif two"} -2
              %li 
                %span{:class=>"sub-title"}Average replies / user
                %span{:class=>"sub-notif one"}= 100 * current_community.replies.count / current_community.users.count
                %span{:class=>"sub-notif two"}= 100 * current_community.replies_this_week.count / current_community.users.count
              %li 
                %span{:class=>"sub-title"}Average posts / user
                %span{:class=>"sub-notif one"}= 100 * current_community.posts.count / current_community.users.count
                %span{:class=>"sub-notif two"}= 100 * current_community.posts.this_week.count / current_community.users.count
              %li.community-percent
                %p 
                  How many households in town are on CommonPlace?
                  %a(href="/#{current_community.slug}/invite" class="invite" data-remote) Invite more!
                .percent-layer{ :style => "width: #{current_community.users.count * 152 / current_community.households}px;" }
                = image_tag("house.png")
                %span.percent #{current_community.users.count * 100 / current_community.households}%
        %li{:class=>"invite"}
          %div{:class=>"letter"}
          %a(href="/#{current_community.slug}/invite" data-remote) Invite
        %li{:class=>"inbox"}
          %div{:class=>"file"}
          %a(href="/#{current_community.slug}/inbox" data-remote) Inbox
        %li{:class=>"account"}
          = image_tag current_user.avatar_url(:thumb), size: "22x22", class: "avatar"
          %a(href="/#{current_community.slug}/account" data-remote) Hi, #{current_user.first_name}!
          %ul.account-sub
            %li
              %a(href="/#{current_community.slug}/account" data-remote) Account Settings
            %li
              %a(href="/#{current_community.slug}/faq" data-remote) FAQ
            - if current_community.discount_businesses.present?
              %li
                %a(href="/#{current_community.slug}/discount" data-remote) Good Neighbor Discount
            %li
              %a(href="/#{current_community.slug}/privacy") Privacy Policy
            %li 
              %a(href="/users/sign_out") Sign Out
      = link_to "/#{current_community.slug}", :id => "logo", :data => { :remote => true } do
        = image_tag "logo2.png", :alt => 'CommonPlace'
        %span.community= current_community.name
  - else
    #nav_wrapper
      :javascript
        $(function() {
        $('#sign_in_button').click(function() {
        $("#header form.user").slideToggle();
        });
        });

      %ul{:id=>"user_sign_in"}
        %li Have an Account?
        %li{:id=>"sign_in_button", :class=>"remove_border"} Sign in
        %li{:id=>"sign_in_form"}
          = render 'user_sessions/form'
            
      - if params[:community]
        = link_to "/#{params[:community]}", :id => "logo" do
          = image_tag "logo2.png", :alt => 'CommonPlace'
          %span.community= current_community.name
      - else
        = link_to "/", :id => "logo" do
          = image_tag "logo2.png", :alt => 'CommonPlace'
    
  .clear
