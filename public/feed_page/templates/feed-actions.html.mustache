<div id="feed-action-nav">
  <a href="#/post-announcement" class="post-announcement {{postAnnouncementClass}}">Post an Announcement</a>
  <a href="#/post-event" class="post-event {{postEventClass}}">Post an <br>Event</a>
  <a href="#/invite-subscribers" class="invite-subscribers {{inviteSubscribersClass}}">Invite New Subscribers</a>
</div>

<div class="tab post-announcement {{postAnnouncementClass}}">
  <img class="avatar" src="{{avatar_url}}" width="50" height="50">

  <form>
    <input name="title" type="text" value="Title">
    <textarea name="body">Body</textarea>
    <button>Post an Announcement</button>
  </form>
  <div style="clear: both;"></div>
</div>

<div class="tab post-event {{postEventClass}}">
  <form>
    <input name="title" type="text" value="Title">
    <textarea name="about">About</textarea>
    <button>Post an Event</button>
  </form>
  <div style="clear: both;"></div>
</div>

<div class="tab invite-subscribers {{inviteSubscribersClass}}">
  <form>
    <input name="title" type="text" value="Title">
    <textarea name="about"></textarea>
    <button>Invite People</button>
  </form>
  <div style="clear: both;"></div>
</div>
