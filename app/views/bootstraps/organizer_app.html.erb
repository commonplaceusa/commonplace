<!DOCTYPE html>

<html>

  <head>
    <%= stylesheet_link_tag "organizer_app" %>
  </head>

  <!--name id-->

  <body>

    <div id="main">
      
      <div id="file-picker">
        <div id="file-picker-filters">

          <div>
            <label>
              <input id="on_commonplace" type="checkbox" name="on-commonplace-filter">
              On CommonPlace
            </label>
          </div>

          <div>
            <label>
              <input id="has_friends_on_commonplace" type="checkbox" name="on-commonplace-filter">
              Has friends on CommonPlace
            </label>
          </div>

          <div>
            <label>
              <input id="in_commonplace_organization" type="checkbox" name="on-commonplace-filter">
              In CommonPlace organization
            </label>
          </div>

          <div>
            <label>
              <input id="have_dropped_flyers" type="checkbox" name="on-commonplace-filter">
              Have dropped flyers
            </label>
          </div>

        </div>
        
        <ul id="file-picker-list">
          
        </ul>

      </div>

      <div id="file-viewer">
      </div>
    </div>

    <%= javascript_include_tag :organizer_app %>
    
    <script type="text/javascript">
      
      $(function() {
      
        var community = window.location.pathname.replace(/^\/organizer_app\//, "");

        var files = new OrganizerApp.Files([], { community: community });

        files.fetch({ 
          success: function() {
            var main = new OrganizerApp.Main({ el: $("#main"), collection: files });
            main.render();
          }
        });

      });
    </script>

  </body>

</html>
