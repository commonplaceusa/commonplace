                              <!--INTRODUCTION-->
                              <table id="introduction" width="100%" cellpadding="0" cellspacing="0" border="0">
                                <tr>
                                  <td>
                                    <h1><strong>Happy {{day_of_week}}!</strong></h1>
                                    <p>Today is {{day_of_week}}, {{month_long}} {{day_of_month}} and the weather is a cool {{temperature}} degrees - a perfect day to go outside and meet some of your {{community_name}} neighbors! Before you step out, take some time to read your customized daily bulletin featuring the latest neighborhood posts, events, and announcements from your neighbors in {{community_name}}. Put on a light coat or jacket and have a wonderful day.</p>
                                  </td>
                                </tr>
                              </table>
                              <!--END INTRO-->

                              {{#posts_present}}
                              <table width="650" cellpadding="25" cellspacing="0" border="0" class="section_container">
                                <tr>
                                  <td width="100%">                      
                                    <img src="http://markmalazarte.com/commonplace/section-icon.png" alt="Post Icon" class="section_icon"> &nbsp; <span class="section_header">{{#t}}posts-section-title{{/t}}</span>	
                                  </td>
                                </tr>
                              </table>	

                              {{#posts}}
                              <table width="100%" cellpadding="0" cellspacing="0" border="0" class="posts">
                                <tr>
                                  <td width="100%" bgcolor="#ffffff">
                                    <table width="100%" cellpadding="20" cellspacing="0" border="0">
                                      <tr>
                                        <td bgcolor="#ffffff" class="contentblock">
                                          <table>
                                            <tr class="post"><!--A Post-->
                                              <td class="avatar" height="110" valign="top"><img src={{avatar_url}} alt="User Avatar" width="50" height="50"></td>
                                              <td class="post_content">
                                                <a href="{{url}}"><p class="title" style="color:#1b334a;">{{title}}</p></a>
                                                <p class="author" style="color:#1b334a;">{{author}}</h4>
                                                <p class="body">{{body}}</p>
                                                {{#replies}}
                                                <div class="reply-separator"></div>
                                                <table class="reply">
                                                  <tr>
                                                    <td class="avatar" rowspan="2">
                                                      <img src="{{avatar_url}}" width="25" height="25">
                                                    </td>
                                                    <td class="author">
                                                      {{author}}
                                                    </td>
                                                  </tr>
                                                  <tr>
                                                    <td class="body">
                                                      <p>{{body}}</p>
                                                    </td>
                                                  </tr>
                                                </table>
                                                {{/replies}}
                                                <table width="100%" class="links">
                                                  <tr>
                                                    <td width="255px">&nbsp;</td>
                                                    <td width="150px">
                                                      <a href="{{new_message_url}}">
                                                        <span class="viewall">Send a Private Message</span>
                                                      </a>
                                                    </td>
                                                    <td width="8px">&nbsp;</td>
                                                    <td class="view_post_td">
                                                      <a href="{{post_url}}"class="reply-now"><img src="http://markmalazarte.com/commonplace/view-post-btn.gif" width="90" height="25" alt="View Post" />
                                                    </td>
                                                  </tr>
                                                </table>
                                              </td>
                                            </tr>
                                          </table>
                                        </td>
                                      </tr>
                                    </table>
                                  </td>
                                </tr>
                                <tr>
                                  <td><div class="post-separator"></div></td>
                                </tr>
                              </table>  
                              {{/posts}}
                              {{/posts_present}}

                              {{#events_present}}
                              <table width="100%" cellpadding="25" cellspacing="0" border="0" class="section_container">
                                <tr>
                                  <td><div class="post-separator"></div></td>
                                  <td width="100%">                      
                                    <img src="http://markmalazarte.com/commonplace/section-icon.png" alt="Event Icon" class="section_icon"> &nbsp; <span class="section_header">{{#t}}events-section-title{{/t}}</span>	
                                  </td>
                                </tr>
                              </table>	

                              {{#events}}
                              <table width="100%" cellpadding="0" cellspacing="0" border="0" class="posts">
                                <tr>
                                  <td width="100%" bgcolor="#ffffff">
                                    <table width="100%" cellpadding="20" cellspacing="0" border="0">
                                      <tr>
                                        <td bgcolor="#ffffff" class="contentblock">
                                          <table>
                                            <tr class="post event"><!--A Post-->
                                              <td class="avatar" height="110" valign="top">
                                                <div class="calendar">
                                                  <div class="short-month">{{short_month}}</div>
                                                  <div class="day">{{day}}</div>
                                                </div>
                                                <span class="time">{{starts_at}}</span>
                                                -
                                                <span class="time">{{ends_at}}</span>
                                              </td>
                                              <td class="post_content">
                                                <a href="{{url}}"><p class="title" style="color:#1b334a;">{{title}}</p></a>
                                                <h4 class="author" style="color:#1b334a;">{{author}}</h4>
                                                <p class="body">{{body}}</p>
                                                <p>
                                                  {{#venue}}<span class="info">Venue:</span> {{venue}}<br>{{/venue}}
                                                  {{#address}}<span class="info">Address:</span> {{address}}{{/address}}
                                                </p>

                                                {{#replies}}
                                                <div class="reply-separator"></div>
                                                <table class="reply">
                                                  <tr>
                                                    <td class="avatar" rowspan="2">
                                                      <img src="{{avatar_url}}" width="25" height="25">
                                                    </td>
                                                    <td class="author">
                                                      {{author}}
                                                    </td>
                                                  </tr>
                                                  <tr>
                                                    <td class="body">
                                                      <p>{{body}}</p>
                                                    </td>
                                                  </tr>
                                                </table>
                                                {{/replies}}

                                                <table width="100%" class="links">
                                                  <tr>
                                                     <td width="255px">&nbsp;</td>
                                                      <td width="150px">
                                                        <a href="{{new_message_url}}">
                                                          <span class="viewall">Send a Private Message</span>
                                                        </a>
                                                      </td>
                                                      <td width="8px">&nbsp;</td>
                                                    <td class="view_post_td">
                                                      <a href="{{post_url}}"class="reply-now"><img src="http://markmalazarte.com/commonplace/view-post-btn.gif" width="90" height="25" alt="View Post" />
                                                    </td>
                                                  </tr>
                                                </table>
                                              </td>
                                            </tr>
                                          </table>
                                        </td>
                                      </tr>
                                    </table>
                                  </td>
                                </tr>
                                <tr>
                                  <td><div class="post-separator"></div></td>
                                </tr>
                              </table>  
                              {{/events}}
                              {{/events_present}}

                              {{#announcements_present}}
                              <table width="100%" cellpadding="25" cellspacing="0" border="0" class="section_container">
                                <tr>
                                  <td><div class="post-separator"></div></td>
                                  <td width="100%">                      
                                    <img src="{{announcement_icon_url}}" alt="Announcement Icon" class="section_icon"> &nbsp; <span class="section_header">{{#t}}announcements-section-title{{/t}}</span>	
                                  </td>
                                </tr>
                              </table>	

                              {{#announcements}}
                              <table width="100%" cellpadding="0" cellspacing="0" border="0" class="posts">
                                <tr>
                                  <td width="100%" bgcolor="#ffffff">
                                    <table width="100%" cellpadding="20" cellspacing="0" border="0">
                                      <tr>
                                        <td bgcolor="#ffffff" class="contentblock">
                                          <table>
                                            <tr class="post"><!--A Post-->
                                              <td class="avatar" height="110" valign="top"><img src={{avatar_url}} alt="User Avatar" width="50" height="50"></td>
                                              <td class="post_content">
                                                <a href="{{url}}"><p class="title" style="color:#1b334a;">{{title}}</p></a>
                                                <h4 class="author" style="color:#1b334a;">{{author}}</h4>
                                                <p class="body">{{body}}</p>

                                                {{#replies}}
                                                <div class="reply-separator"></div>
                                                <table class="reply">
                                                  <tr>
                                                    <td class="avatar" rowspan="2">
                                                      <img src="{{avatar_url}}" width="25" height="25">
                                                    </td>
                                                    <td class="author">
                                                      {{author}}
                                                    </td>
                                                  </tr>
                                                  <tr>
                                                    <td class="body">
                                                      <p>{{body}}</p>
                                                    </td>
                                                  </tr>
                                                </table>
                                                {{/replies}}
                                                <table width="100%" class="links">
                                                  <tr>
                                                     <td width="255px">&nbsp;</td>
                                                      <td width="150px">
                                                        <a href="{{new_message_url}}">
                                                          <span class="viewall">Send a Private Message</span>
                                                        </a>
                                                      </td>
                                                      <td width="8px">&nbsp;</td>
                                                    <td class="view_post_td">
                                                      <a href="{{post_url}}"class="reply-now"><img src="http://markmalazarte.com/commonplace/view-post-btn.gif" width="90" height="25" alt="View Post" />
                                                    </td>
                                                  </tr>
                                                </table>
                                              </td>
                                            </tr>
                                          </table>
                                        </td>
                                      </tr>
                                    </table>
                                  </td>
                                </tr>
                                <tr>
                                  <td><div class="post-separator"></div></td>
                                </tr>
                              </table>  
                              {{/announcements}}
                              {{/announcements_present}}
                            </td>
                          </tr>
                        </table>
                        <div class="post-separator"></div>
                        <table width="650" cellpadding="0" cellspacing="0" border="0" align="center" class="table">
                                <tr>
                                  <td width="100%" nowrap align="center" class="cell" style="position: relative; bottom: 30px;">
                                    <!--footer-->
                                    <table width="100%" cellpadding="0" cellspacing="0" border="0" class="table footer">
                                      <tr>
                                        <tdvalign="top" class="footershow">
                                        <div class="post-separator"></div>
                                        <p class="email_settings">Want to change your email settings? <a href="{{settings_url}}">Click here</a> to manage your subscriptions.</p>
                                        <p class="website"><a href="{{settings_url}}"><span>Change my email settings</span></a> | <a href="{{root_url}}"><span>{{community_slug}}.OurCommonPlace.com</span></a></p>
                                    </td></tr>
                                  </table><!--End footer-->
                                </td>
                              </tr>	
                        <div class="post-separator"></div>
                      </td>
                    </tr>
                  </tbody>
                </table>
             </center>
           </td>
         </tr>
      </tbody>
    </table>
  </body>
</html>
