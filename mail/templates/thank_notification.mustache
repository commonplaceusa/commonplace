<html>
  <head>
    <style>
      {{styles}}
    </style>
  </head>
  <body>

    <table id="page-wrapper">
      <tbody>
        <tr>
          <td>
            <center>
              <table id="email-wrapper">
                <tbody>
                  <tr>
                    <td>
                      <table id="header">
                        <tr><td>
                            <a href="{{community_home_url}}"><img src="{{header_image_url}}" alt"OurCommonPlace {{community_name}}"></a>
                        </td></tr>
                      </table>
                    </td>
                  </tr>

                  <tr>
                    <td id="content-td">
                      <table id="content">
                        <tbody>
                          <tr>
                            <td>
                              <table id="greeting">
                                <tbody>
                                  <tr>
                                    <td>
                                      <div class="p">Hi, {{short_user_name}},</div>

                                      <div class="p">Your neighbor <a href="{{neighbor_profile_url}}"><span>{{neighbor_name}}</span></a> {{content}}{{#has_content_url}}<a href="{{content_url}}"><span>{{content_url_text}}</span></a>{{/has_content_url}}{{extra_content}}</div>

                                      <div class="p">Regards,<br>The OurCommonPlace Team</div>

                                    </td>
                                  </tr>
                                </tbody>
                              </table>

                            </td>
                          </tr>
                        </tbody>
                      </table>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <table id="legal-footer" width="100%" cellpadding="0" cellspacing="0" border="0">
                        <tbody>
                          <tr>
                           <td valign="top">
                             <div class="p copy"><a href="{{settings_url}}"><span>Change my email settings</span></a> | <a href="{{root_url}}"><span>{{community_slug}}.OurCommonPlace.com</span></a></div>
                            <p class="social-media">Follow us: <a href="{{facebook_url}}"><img src="{{facebook_icon_url}}" width="20" height="20" alt="Facebook" /></a> <a href="{{twitter_url}}"><img src="{{twitter_icon_url}}" width="20" height="20" alt="Twitter" /></a></span>
                          </td>
                        </tr>
                      </table>
                    </td>
                  </tr>
                </tbody>
              </table>
            </center>
          </td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
