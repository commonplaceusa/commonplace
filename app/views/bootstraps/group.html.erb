<!DOCTYPE html>

<html>
  <head>
    <link href="https://webfonts.fontslive.com/css/0a25c9dc-bb5a-4ea9-88b2-1c7a8802e172.css" rel="stylesheet" type="text/css">
    <%= stylesheet_link_tag "group_page" %>
    <%= javascript_include_tag "group_page" %>
    <link href="https://fonts.googleapis.com/css?family=Rokkitt:400,700" rel="stylesheet" type ="text/css">
    <link href="/favicon.png" rel="icon" type="image/png">
    <title>CommonPlace Groups</title>
  </head>

  <body>

    <%= render "layouts/header" %>
    
    <div id="main">

      <div id="group"></div>
      
      <div id="right-column">
        <div id="groups-list">
        </div>
      </div>
      <div style="clear: both"></div>
    </div>

   <%= render "layouts/footer" %>
    
  </body>

  <script type="text/javascript">
    $(function() {
      $.getJSON("/api/account", function(account) {

      var community = <%= serialize current_community %>;
      var group = <%= serialize Group.find_by_slug(params[:slug]) %>;
      var groups = <%= serialize current_community.groups %>;
      new GroupPageRouter({ account: account, community: community, group: group.slug, groups: groups });
      //Backbone.history.start();

      });
    });
  </script>

</html>
