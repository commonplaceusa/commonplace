- @messages.each do |message|
  .message
    %h3.subject= message.subject
    %p.to to #{message.recipient.name if message.recipient}
    %p.from from #{message.user.name if message.user}
    %p.date= message.created_at
    %p.body= message.body
    
:javascript
  setTimeout(function() { window.location = window.location; }, 60*1000);