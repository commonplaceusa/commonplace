<form>
  <div class="incomplete">Please fill in the <span class="incomplete-fields"></span>.</div>
  <a class="delete" href="#">Delete</a>
  <h1>Edit your announcement</h1>
  <label for="title">Subject:</label>
  <input name="title" value="{{title}}" type="text">

  <label for="body">Body:</label>
  <textarea name="body" rows="3">{{body}}</textarea>

  <div class="controls">
    <a class="cancel" href="#">Cancel</a>
    <button>Change Announcement</button>
  </div>
</form>
