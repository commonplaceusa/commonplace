<%= form_for @user,
             :as => :registration,
             :url => '/api/registrations/crop_avatar',
             :html => {:class => "registration crop"} do |f| %>
    <%= image_tag @user.avatar_url(:original), :id => "cropbox" %>
    <% [:crop_x, :crop_y, :crop_w, :crop_h].each do |attribute| %>
        <%= f.hidden_field attribute, :id => attribute %>
    <% end %>

    <a href="#step4" data-action="submit" class="formbutton big">Continue.. &#9654;</a>

<% end %>
