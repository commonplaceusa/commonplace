<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>{{community_name}} Daily Bulletin</title>
    <style>
      {{styles}}
    </style>
  </head>

  <body marginheight="0" topmargin="0" marginwidth="0" leftmargin="0" bgcolor="#f5f4e8">
     <table id="page-wrapper">
        <tbody>
          <tr>
            <td>
              <center>
                <table id="email-wrapper">
                  <tbody>
                    <tr>
                      <td>
                        <table width="650" cellpadding="0" cellspacing="0" border="0" align="center">
                          <tr>
                            <td width="100%">
                              <!-- NEW HEADER -->
                              <table id="header-wrapper" width="100%" height="82" border="0" cellpadding="0" cellspacing="0">
                              	<tr>
                              		<td class="header" width="550" height="65" rowspan="2" bgcolor="#1b334a">
                              		   <a href="{{community_home_url}}"><img class="logo" src="http://markmalazarte.com/commonplace/bulletin/Hinckley.png" alt="OurCommonPlace {{community_name}} Daily Bulletin" /></a>
                              		</td>
                              		<td class="month" width="80" height="30" bgcolor="#aa211d"><strong>{{month_short}}</strong></td>
                              		<td class="header" width="20" height="65" rowspan="2" bgcolor="#1b334a">&nbsp;</td>
                              	</tr>
                              	<tr>
                              		<td class="day" width="80" height="50" rowspan="3" bgcolor="#fff">{{day_of_month}}</td>
                              	</tr>
                              	<tr>
                              		<td width="550" height="4" bgcolor="#f5f4e8" style="background-color: #f5f4e8;">&nbsp;</td>
                              		<td width="20" height="4" bgcolor="#f5f4e8" style="background-color: #f5f4e8;">&nbsp;</td>
                              	</tr>
                              </table>
                              <!-- END NEW HEADER -->

                              <!--
                              (Old Header)
                              <table width="650" style="color:#1b334b;font:14px Helvetica, sans-serif;margin-bottom:0px;" cellpadding="0" cellspacing="0" border="0" class="table">
                                <tr bgcolor="#1b334a">
                                  <td width="30px" style="padding-left:15px;position:relative;bottom:9px;"><img src="{{logo_url}}" alt="CommonPlace Logo"><a href="{{root_url}}"></a></td>
                                  <td class="town_name" width="450px" style="font:20px Rokkitt, 'Rockwell STD', Rockwell, serif;padding-left: 5px;position:relative;bottom:7px;">
                                    <a href="{{root_url}}">{{community_name}}</a>
                                  </td>
                                  <td width="120px">
                                    <table class="date" cellpadding="0" cellspacing="0" border="0">
                                      <tr>
                                        <td class="month">{{month_short}}</td>
                                      </tr>
                                      <tr>
