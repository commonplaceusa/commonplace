<div class="event" id="event-{{id}}-item">

  <div class="small_calendar avatar">
    <div class="month">{{abbrev_month}}</div>
    <div class="date">{{day_of_month}}</div>
  </div>
  {{#any_available_actions}}
  <div class="actions-dropdown">
      <div class="toggle-actions"></div>
      <div class="actions">
      {{#can_edit}}
          <form action="{{url}}/edit" method="most" class="edit">
            <input type="submit" value="Edit">
          </form>
        {{/can_edit}}
        {{#can_delete}}
          <form action="{{url}}" method="post" class="delete">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="Delete">
          </form>
        {{/can_delete}}
      </div>
    </div>
  {{/any_available_actions}}

  <div class="time">{{occurs_in}}</div>

  <div class="reply-count">{{reply_count}} replies</div>

  <div class="title">{{title}}</div>

  <div class="author">{{author}}</div>

  <div class="body">{{{body}}}</div>

  {{^replies}}
    <a href="/events/{{id}}/replies/new" class="show-reply-form">
      Reply to this event
    </a>
  {{/replies}}
</div>

{{> replies}}
