<div class="group-post">

  <div class="corner">{{publishedAt}}{{#canEdit}} - <a href="#" class="editlink">EDIT</a>{{/canEdit}}</div>

  <img src="{{avatarUrl}}" width="50" height="50" class="avatar">

  <a class="title">{{title}}</a>

  <div class="author"><a class="person">{{author}}</a>{{#group}} to <a href="{{groupUrl}}">{{group}}</a>{{/group}}</div>

  <div class="body post-body">{{#markdown}}{{{body}}}{{/markdown}}</div>

  <div style="clear:both;"></div>
</div>

<div class="replies"></div>
