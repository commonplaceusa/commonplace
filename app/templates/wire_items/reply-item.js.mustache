<img class="avatar" src="{{authorAvatarUrl}}" height="30" width="30">

<div class="reply-info">
  <div class="reply-text">
    <span class="author">{{author}}</span>
    <div class="body reply-body">
      {{#block}}
      {{#markdown}}{{body}}<span class="time">{{time}}</span>{{/markdown}}
      <div class="controls">
        <span class="thanks_count">{{numThanks}} thanks</span>
        {{#canThank}}<a href="#" class="thank-reply">THANK</a>{{/canThank}}
        {{#canEdit}}<a href="#" class="delete-reply">DELETE</a>{{/canEdit}}
      </div>
      {{/block}}
      
      {{^block}}
      {{#markdown}}{{body}}<span class="time">{{time}},</span> <span class="thanks_count">{{numThanks}} thanks</span> {{#canThank}}<a href="#" class="thank-reply">THANK</a> {{/canThank}}{{#canEdit}}<a href="#" class="delete-reply">DELETE</a>{{/canEdit}}{{/markdown}}
      {{/block}}
    </div>

  </div>

</div>

<div style="clear: both;"></div>
