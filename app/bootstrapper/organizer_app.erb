<!DOCTYPE html>

<html>

  <head>
    <%= javascript_include_tag "http://maps.googleapis.com/maps/api/js?key=AIzaSyBPGZ6eQKnEXsyfZw_GahjTYzZd1wDOgUk&sensor=true&libraries=drawing","http://stevenlevithan.com/assets/misc/date.format.js" %>
    <%= stylesheet_link_tag "organizer_app" %>
  </head>

  <!--name id-->

  <body>

    <div id="main">
      
      <div id="file-picker">
        <span id="loading">Loading residents (may take 10 seconds or so)...</span>
      </div>

      <div id="file-viewer">
      </div>
    </div>

    <%= javascript_include_tag :organizer_app %>
    
    <script type="text/javascript">
      
      $(function() {
      
        var c_id = window.location.pathname.replace(/^\/organizer_app\//, "");
        $.getJSON("/api/communities/" + c_id, function(r) {
          var community = new Community(r);
          var files = new OrganizerApp.Files([], { community: community });
          var main = new OrganizerApp.Main({ 
            el: $("#main"), 
            collection: files, 
            community: community
          });
          main.render();
        });

      });
    </script>

  </body>

</html>
