
- semantic_form_for current_user, :url => settings_account_path do |f|
  %h1= t ".title"
  - f.inputs do
    = f.input :email
    = f.input :password
    = f.input :receive_weekly_digest, :as => :boolean
    = f.input :post_receive_method, :as => :radio, :collection => User.post_receive_options, :label => "Neighborhood Posts:"
  - f.buttons do
    %li.delete
      = link_to "Delete my CommonPlace account", delete_account_path
    = f.commit_button "Update Settings"
