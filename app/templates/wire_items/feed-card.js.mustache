<div>
   <div class="left message-link" href="#">
      <img class="avatar-container" src={{avatar}} />
   </div>
   <div class="right">
      <h2 class="name message-link" href="#">{{name}}</h2>
      <div class="stat-bar">
         <ul>
            <li>
            <span class="big">{{announce_count}}</span>
              <span class="little">Announcements</span>
            </li>
            <li>
              <span class="big">{{event_count}}</span>
              <span class="little">Events</span>
            </li>
            <li>
              <span class="big">{{subscribers}}</span>
              <span class="little">Subscribers</span>
            </li>
         </ul>
      </div>
  </div>
  <p>{{about}}</p>
  <p><span class="bold">Website:</span>  <a href={{site_url}} target="_blank">{{site_url}}</a></p>
  {{^isSubscribed}}<a href="#" class="red-button subscribe">Subscribe</a>{{/isSubscribed}}
  {{#isSubscribed}}<a href="#" class="red-button unsubscribe">Unsubscribe</a>{{/isSubscribed}}
</div>
