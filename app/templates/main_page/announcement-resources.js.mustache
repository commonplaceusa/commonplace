<div class="sub-navigation">
  {{#isSearchEnabled}}
    <form class="search">
      <input type="text" value="{{query}}" placeholder="Search"/>
      <div class="cancel"></div>
    </form>
  {{/isSearchEnabled}}
  <h2><a href="/list/announcements" class="current" data-remote>
    {{^isRecent}}{{#t}}announcements.a{{/t}}{{/isRecent}}
    {{#isRecent}}{{#t}}recent-announcements.a{{/t}}{{/isRecent}}
  </a>
  &sdot;
  <a href="/list/feeds" data-remote>{{#t}}feeds.a{{/t}}</a></h2>
  <div style="clear:both;"></div>
</div>
<div class="no-results"><p>There were no results</p></div>
<div class="announcements wire">{{>wires.wire}}</div>
