<div class="wrapper">

  <div class="navigation">

    <a
      href="/{{community_slug}}/share/post"
      data-remote
      class="create-neighborhood-post tab-button post">
      <div class="icon"></div>
      {{#t}}create-neighborhood-post.a{{/t}}
    </a>

    {{#accountHasFeeds}}
      <a
        href="{{firstFeedUrl}}"
        class="create-announcement tab-button announcement">
        <div class="icon"></div>
        {{#t}}create-announcement.a{{/t}}
      </a>
    {{/accountHasFeeds}}

    <a
      href="/{{community_slug}}/share/event"
      class="create-event tab-button event"
      data-remote>
      <div class="icon"></div>
      {{#t}}create-event.a{{/t}}
    </a>

    <a
      href="/{{community_slug}}/share/group_post"
      class="create-group-post tab-button groupPost group_post"
      data-remote>
      <div class="icon"></div>
      {{#t}}create-group-post.a{{/t}}
    </a>

  </div>

  <div class="form-container">
  </div>

  <div style="clear: both;"></div>
</div>
