      var header = new CommonPlace.shared.HeaderView({el: $("#header")});
      header.render();

      var communityExterior = <%= Serializer::serialize(@community.exterior).to_json.html_safe %>;
      window.router = new CommonPlace.registration.Router({ communityExterior: communityExterior });

