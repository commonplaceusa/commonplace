
<% content_for :greeting do %>
  <div style="margin-bottom:10px;">Hi <%= @recipient.first_name %>,</div>    
  <% link_to user_url(@reply.user, :subdomain => @community.slug) do %>
    <font color="#b53f3c">
      <%= @reply.user.full_name %>
    </font>
  <% end %>
  just replied to a message: 
  <% link_to message_url(@message, :subdomain => @community.slug) do %>
    <font color="#b53f3c">
      <em><%= @message.subject %></em>
    </font>
  <% end %>

<% end %>

<% content_for :subject, @message.subject %>

<% content_for :body, markdown(@reply.body) %>

<% content_for :avatar, 
   image_tag(root_url(:subdomain => @community.slug) + @reply.user.avatar.url(:thumb), :width => 49, :height => 48, :vspace => 0, :border => 0, :align => "top") %>

<% content_for :reply_with do %>
  <div style="font-family:Arial, Helvetica, sans-serif;color:#4a7eb0;font-size:11px;font-weight:bold;background-color:#b53f3c;padding:5px 8px;display:inline-block;border:1px solid #923532;text-align:center;text-transform:none!important;margin-top:10px;">
    <% link_to message_url(@message, :subdomain => @community.slug), :style => "text-decoration:none;" do %>
      <font color="#FFEEEE">
        Reply to <%= @reply.user.first_name %>
      </font>
    <% end %>
  </div>
<% end %>
  
