<html>
  <head>
    <style>
      {{styles}}
    </style>
  </head>
  <body>

    <table id="page-wrapper">
      <tbody>
        <tr>
          <td>
            <center>
              <table id="email-wrapper">
                <tbody>
                  <tr>
                    <td>
                      <table id="header">
                        <tr><td>
                            <a href="{{community_home_url}}"><img src="{{header_image_url}}" alt"OurCommonPlace {{community_name}}"></a>
                        </td></tr>
                      </table>
                    </td>
                  </tr>

                  <tr>
                    <td id="content-td">
                      <table id="content">
                        <tbody>
                          <tr>
                            <td>
                              <table id="greeting">
                                <tbody>
                                  <tr>
                                    <td>
                                      <div class="p">Good news!</div>

                                      <div class="p">Your neighbor <a href="{{thanker_profile_url}}">{{thanker_name}}</a> just thanked you on CommonPlace for your {{thanked_for}}</div>

                                      <div class="p">To view {{short_thanker_name}}'s community profile, <a href="{{thanker_profile_url}}"><span>click here</span></a>.</div>

                                      <div class="p">Regards,<br>The CommonPlace Team</div>

                                    </td>
                                  </tr>
                                </tbody>
                              </table>

                            </td>
                          </tr>
                        </tbody>
                      </table>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <table id="legal-footer" width="100%" cellpadding="0" cellspacing="0" border="0">
                        <tbody>
                          <tr>
                           <td valign="top">
                             <div class="p copy"><a href="{{settings_url}}"><span>Change my email settings</span></a> | <a href="{{root_url}}"><span>{{community_slug}}.OurCommonPlace.com</span></a></div>
                             <p class="social-media">Join us on: <img src="{{facebook_icon_url}}" width="20" height="20" alt="Facebook" class="Facebook"/> <img src="{{twitter_icon_url}}" width="20" height="20" alt="Twitter" class="Twitter"/></span>
                          </td>
                        </tr>
                      </table>
                    </td>
                  </tr>
                </tbody>
              </table>
            </center>
          </td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
