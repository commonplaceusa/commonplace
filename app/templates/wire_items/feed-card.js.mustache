<div>
  <div class="left">
    <img class="avatar-container" src={{avatar}} />
    <a class="contact message-link" href="#">Send Message</a>
    {{^isSubscribed}}<a href="#" class="subscribe">Subscribe</a>{{/isSubscribed}}
    {{#isSubscribed}}<a href="#" class="unsubscribe">Unsubscribe</a>{{/isSubscribed}}
  </div>
  <div class="right">
    {{#canEdit}}<span class="editlink"><a href="">Edit</a></span>{{/canEdit}}
    <h2 class="name">{{name}}</h2>
    <div class="stat-bar">
      <ul>
        <li class="announcements">
        <span class="big">{{announce_count}}</span>
        <span class="little">Announcements</span>
        </li>
        <li>
        <span class="big events">{{event_count}}</span>
        <span class="little">Events</span>
        </li>
        <li class="subscribers">
        <span class="big">{{subscribers_count}}</span>
        <span class="little">Subscribers</span>
        </li>
      </ul>
    </div>
    {{#hasAbout}}
    <p>{{about}}</p>
    {{/hasAbout}}
    <p><span class="bold">Website:</span>  <a href={{site_url}} target="_blank">{{site_url}}</a></p>
  </div>
</div>
