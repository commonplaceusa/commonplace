
= update_content "#say-something" do
  #say-something
    %h2= t ".title"
    = render 'shared/say_something_nav', :current => :invites
    - form_tag "/invites", 'data-remote' => true, :class => "formtastic" do
      %fieldset.inputs
        %ol
          %li.text
            = label_tag :emails, t("formtastic.labels.invites.emails", :community => current_community.name)
            = text_area_tag :emails, "", :rows => 6
          %li.text
            = label_tag :message, t("formtastic.labels.invites.message")
            = text_area_tag :message
      %fieldset.buttons
        %ol
          %li.plaxo
            %a{ :href => "#", :onclick => "showPlaxoABChooser('emails', '/plaxo-importer.html'); return false"}
              &#x271a; Import emails from my address book
          %li.commit
            = submit_tag "Invite"
