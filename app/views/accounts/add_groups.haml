- if Rails.env.production?
  %script
    = "mpmetrics.track('Add groups', {'community': '#{current_community.slug}'});"
    
#wrapper
  %h1= t(".h1").html_safe
  #registration_information
    %ul
      %li= t ".p1"
      %li= t ".p2"
      %li= t ".p3"
  #main
    %h2
      Subscribe to some groups:
    - form_tag "/account/subscribe_to_groups", :id => "add_groups" do
      #groups_container
        - @groups.each do |group|
          .group
            = image_tag(group.avatar_url)
            .unchecked
            %h3= group.name
            %p= group.about
            %input{:class =>"groupId", :name => "group_ids[]", :value => group.id.to_s, :type =>"checkbox"}
      %input{:type => "image", :src => "/images/buttons/continue2.png"}

    %br{:class=>"cleared"}

#fb-root
