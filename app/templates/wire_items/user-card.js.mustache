<div>
   <div class="left">
     <img class="avatar-container" src={{avatar}} />
      <a class="red-button message-link pie-element" href="#">Contact</a>
      {{^hasMet}}
        <a href="#" class="red-button meet">Have You Met?</a>
        <a class="red-button just-met" style="display: none;">You've Met!</a>
      {{/hasMet}}
      {{#hasMet}}<a href="#" class="red-button unmeet">Already Met!</a>{{/hasMet}}
   </div>
   <div class="right">
     <h2 class="name"><a href="#">{{name}}</a></h2>
      <div class="stat-bar">
         <ul>
            <li>
            <span class="big">{{post_count}}</span>
              <span class="little">Posts</span>
            </li>
            <li>
            <span class="big">{{reply_count}}</span>
              <span class="little">Replies</span>
            </li>
            <li>
              <span class="big">{{sell_count}}</span>
              <span class="little">Items</span>
            </li>
            <li>
            <span class="big">{{thank_count}}</span>
              <span class="little">Thanks</span>
            </li>
            <li>
              <span class="big">{{met_count}}</span>
              <span class="little">Mets</span>
            </li>
         </ul>
      </div>
      <p>{{about}}</p>
      {{#hasPages}}
      <p><span class="bold">Pages:</span>
      {{#pages}}
      <a class="page-link" title="{{slug}}" href="#">{{name}}</a><span>{{^last}},{{/last}}  </span>
      {{/pages}}
      {{/hasPages}}
  </div>
</div>
