#main
  %h1 Enter the email you registered with to reset your password
  = semantic_form_for(:user, :url => user_password_url, :html => {:class => "forgot-password"}) do |f|
    - if flash[:error]
      %p.inline-errors= flash[:error]
    = f.inputs do
      = f.input :email
    = f.buttons do
      = f.submit "Send me password reset instructions"
