%div{'data-href' => announcement_path(announcement), :class => "announcement tooltip", 'data-title' => "Click to see replies and this community feed's profile"}
  = image_tag announcement.owner.avatar_url(:thumb), :class => 'avatar'
  %time= announcement.time
  .reply-count #{ announcement.replies.size } replies
  .title= announcement.subject
  .author= announcement.owner.name
  .body= markdown auto_link(announcement.body, :all, :target => "_blank")