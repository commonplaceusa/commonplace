= javascript_include_tag "https://www.plaxo.com/css/m/js/util.js"
= javascript_include_tag "https://www.plaxo.com/css/m/js/basic.js"
= javascript_include_tag "https://www.plaxo.com/css/m/js/abc_launcher.js"


%h1= t ".h1"

- form_tag feed_invites_path(@feed), :id => "new_feed_invites", :class => "invites formtastic" do

  %h2= t ".h2", :community => current_community.name
  %fieldset.inputs
    %ol
      %li.text.emails
        = label_tag :emails, t(".emails_label")
        = text_area_tag :emails, "", :rows => 5
        %a{ :href => "#", :onclick => "showPlaxoABChooser('emails', '/plaxo-importer.html'); return false"}
          &#x271a; Import emails from my address book
  %fieldset.buttons
    %ol
      %li.commit
        = link_to "Skip this step", feed_profile_path(@feed)
        = submit_tag "Invite"

