%h1= t ".h1", :community => current_community.name, :learn_more => link_to(t(".learn_more"), learn_more_account_path)

= update_content "#main" do
  #main
    - semantic_form_for @user, :url => account_path, :id => 'registration_form' do |f|
      = f.submit "Sign Up", :id => "invisible-button-to-prevent-accidental-facebook-registration-on-pressing-enter"
      %h3
        Fill out the form to get started:
      - f.inputs do
        = f.input :full_name
        = f.input :email
        = f.input :address
      #fb-wrapper
        - f.buttons do 
          = f.commit_button :button_html => {:type => "image", :src => "/images/buttons/sign-up.png"}
  
     
      
#who_is_info_bubble
  %h3= t ".who_is_bubble", :community=> current_community.name
  #who_is_info
    %p
      %span{:class => "bold"} Peter Davis
      is sponsoring CommonPlace in Falls Church.  He's a George Mason alum and loves Falls Church neighborhoods.  You can        email him directly at
      =mail_to("petehappens@gmail.com", "petehappens@gmail.com")
      or call him at
      %span{:class => "red"} (374) 453-3135
    =image_tag('pete-davis.png')     
    %br{:class => "cleared"}   

%p#bubble-1= t ".bubble_1"
%p#bubble-2= t ".bubble_2"
