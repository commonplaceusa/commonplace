<div class="wire-top">
  <h3 class="{{wireCategory}}">{{wireCategoryName}}</h3>
  <p>{{timeAgo}}</p>
</div>
<div class="post-content">
  <img src="{{avatar_url}}" />
  <h3>{{title}}</h3>
  <p class="author">{{author}}</p>
  <p class="post-text">{{body}}</p>
</div>
<div class="post-action clear">
  <ul class="actions">
    <li class="reply">Reply</li>
    <li class="help">Help Publicize</li>
    <li class="thank">Thank</li>
    <li class="flag">Flag</li>
  </ul>
</div>
<div class="post-replies">
  <img src="../images/profile.png" />
  <p class="author">Jeane Doe</p>
  <p class="reply-text">Lalalala This is a derp reply.</p>
  <p class="reply-actions">
  <span class="reply-time">30 minutes ago &bull;</span>
  <span class="reply-thank">Thank</span>
  <span class="many-thanks">&bull; 1 person thanked</span>
  </p>  
  
</div>

<div class="clear">
</div>