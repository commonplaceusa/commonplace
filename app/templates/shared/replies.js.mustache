{{#hiddenReplyCount}}
<a class="replies-more" href="#">View All {{replyCount}} Replies <span class="small">&#x25BC;</span></a>
{{/hiddenReplyCount}}
<ul class="reply-list"></ul>

<div class="comment">
<form class="new-reply clear">
  <img class="avatar-container" src="{{accountAvatarUrl}}" />
  <div class="reply-text">
    <textarea class="reply-text-entry" name="body" placeholder="Write your reply here..."></textarea>
  </div>
  <div class="submit-c pie-element"><span id="submit_text">Reply</span></div>

</form>
<div style="clear: both;"></div>
</div>
